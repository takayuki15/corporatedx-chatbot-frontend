# Backend API Configuration
# PythonバックエンドAPIのベースURL
NEXT_PUBLIC_BACKEND_API_URL=https://your-backend-hostname

# API Gateway ID
# バックエンドAPIのリクエストヘッダー Xx-apigw-api-id に設定される値
NEXT_PUBLIC_API_GATEWAY_ID=your-api-gateway-id

# API Timeout (milliseconds)
# NEXT_PUBLIC_API_TIMEOUT=30000

# Environment
NODE_ENV=development

# Mock API Mode
# true: モックデータを使用 / false: 実際のバックエンドAPIを使用
# 開発環境（NODE_ENV=development）でのみ有効
USE_MOCK_API=true
